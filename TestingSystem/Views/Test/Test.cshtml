
@model IndexViewModel

<form asp-controller="Test" asp-action="NextTest" enctype="multipart/form-data">
    <div class="validation text-danger" asp-validation-summary="ModelOnly"></div>

    <input type="hidden" name="PageNumber" value="@Model.PageNumber" />
    <input type="hidden" name="OurTestId" value="@Model.OurTestId" />
    <input type="hidden" name="QuestionId" value="@Model.QuestionId" />

    <p class="font-weight-bold"> @Model.Question.number.ToString(). @Model.Question.Text</p>

    @if (Model.Question.Variants != null)
    {
        <div class="form-group">

            @foreach (var variant in Model.Question.Variants)
            {
                <input type="radio" asp-for="RadioAnswer" value="@variant" />@variant<br />
            }
        </div>

    }
    else if (Model.Question.SubText != null)
    {
        <div class="form-group">
            <label asp-for="answer0" class="control-label">@Model.Question.SubText[0] </label>
            <input asp-for="answer0" class="form-control" value="@Model.answer0" />
            <span asp-validation-for="answer0" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="answer1" class="control-label">@Model.Question.SubText[1] </label>
            <input asp-for="answer1" class="form-control" value="@Model.answer1" />
            <span asp-validation-for="answer1" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="answer2" class="control-label">@Model.Question.SubText[2] </label>
            <input asp-for="answer2" class="form-control" value="@Model.answer2" />
            <span asp-validation-for="answer2" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="answer3" class="control-label">@Model.Question.SubText[3] </label>
            <input asp-for="answer3" class="form-control" value="@Model.answer3" />
            <span asp-validation-for="answer3" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="answer4" class="control-label">@Model.Question.SubText[4] </label>
            <input asp-for="answer4" class="form-control" value="@Model.answer4" />
            <span asp-validation-for="answer4" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="answer5" class="control-label">@Model.Question.SubText[5] </label>
            <input asp-for="answer5" class="form-control" value="@Model.answer5" />
            <span asp-validation-for="answer5" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="answer6" class="control-label">@Model.Question.SubText[6] </label>
            <input asp-for="answer6" class="form-control" value="@Model.answer6" />
            <span asp-validation-for="answer6" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="answer7" class="control-label">@Model.Question.SubText[7] </label>
            <input asp-for="answer7" class="form-control" value="@Model.answer7" />
            <span asp-validation-for="answer7" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="answer8" class="control-label">@Model.Question.SubText[8] </label>
            <input asp-for="answer8" class="form-control" value="@Model.answer8" />
            <span asp-validation-for="answer8" class="text-danger"></span>
        </div>

    }
    else
    {

        <div class="form-group">
            <textarea name="answer0" class="form-control" rows="5" placeholder="Enter your answer" id="AnsText">@Model.answer0</textarea>
            <span asp-validation-for="@Model.answer0" class="text-danger"></span>
        </div>
    }
    <button type="submit" class="btn btn-primary btn-info mt-2" value="NextTest">Next </button>

</form>

