@model List<QAModel>

@{
    ViewData["Title"] = "Answers";
}

@foreach (var item in Model)
{
    <p class="font-weight-bold"> @item.Question.number.ToString(). @item.Question.Text</p>


    @if (item.Question.Variants != null)
    {
        <p> @item.Answer.answer</p>

    }
    else if (item.Question.SubText != null)
    {
        <div class="form-group">
            <label class="control-label">@item.Question.SubText[0] </label>
            <p> @item.Answer.AnswerList[0]</p>
        </div>
        <div class="form-group">
            <label class="control-label">@item.Question.SubText[1] </label>
            <p> @item.Answer.AnswerList[1]</p>
        </div>
        <div class="form-group">
            <label class="control-label">@item.Question.SubText[2] </label>
            <p> @item.Answer.AnswerList[2]</p>
        </div>
        <div class="form-group">
            <label class="control-label">@item.Question.SubText[3] </label>
            <p> @item.Answer.AnswerList[3]</p>
        </div>
        <div class="form-group">
            <label class="control-label">@item.Question.SubText[4] </label>
            <p> @item.Answer.AnswerList[4]</p>
        </div>
        <div class="form-group">
            <label class="control-label">@item.Question.SubText[5] </label>
            <p> @item.Answer.AnswerList[5]</p>
        </div>
        <div class="form-group">
            <label class="control-label">@item.Question.SubText[6] </label>
            <p> @item.Answer.AnswerList[6]</p>
        </div>
        <div class="form-group">
            <label class="control-label">@item.Question.SubText[7] </label>
            <p> @item.Answer.AnswerList[7]</p>
        </div>
        <div class="form-group">
            <label class="control-label">@item.Question.SubText[8] </label>
            <p> @item.Answer.AnswerList[8]</p>
        </div>

    }
    else
    {

        <p> @item.Answer.answer</p>
    }
}

<a class="btn btn-info" asp-action="Index">Back to List</a>
